''' The binary to access the resource server '''

import logging
import os
import sys

# Add project root directory (enable symlink, and trunk execution).
PROJECT_ROOT_DIRECTORY = os.path.abspath(
    os.path.dirname(os.path.dirname(os.path.realpath(sys.argv[0]))))

if (os.path.exists(os.path.join(PROJECT_ROOT_DIRECTORY,
        'snakebuild')) and PROJECT_ROOT_DIRECTORY not in sys.path):
    sys.path.insert(0, PROJECT_ROOT_DIRECTORY)
    # add the common library from the dev path
    os.putenv('PYTHONPATH', PROJECT_ROOT_DIRECTORY)  # for subprocesses

from snakebuild.i18n import _
from snakebuild.common import create_logger, Config, \
        set_logging_to_config_values, AppDirs, tmp_data_dir
from snakebuild import __version__
from snakebuild.resourceclient import parse_command_line, run_client

LOG = logging.getLogger('snakebuild.resourceclient')

if __name__ == '__main__':
    options, args = parse_command_line()
    AppDirs().init('snakebuild')
    config = Config()
    config.init_default_config(AppDirs().get_shared_data_file(
            'resourceclient.conf'))
    create_logger(config, 'ResourceClient')
    config.load_default()
    if options.configfile is not None:
        if os.path.isfile(options.configfile):
            config.load(options.configfile)
        else:
            print(_("Error: The specified config file does not exist:"))
            print(options.configfile)
            exit(-1)

    set_logging_to_config_values(config, 'ResourceClient')
    LOG.debug(_('Config file loaded start the server.'))

    if options.version:
        print _('SnakeBuild-ResrouceClient: {0}').format(__version__)
        sys.exit(0)

    if not os.path.exists(os.path.join(tmp_data_dir(), 'snakebuild')):
        os.mkdir(os.path.join(tmp_data_dir(), 'snakebuild'))

    run_client(options, args, config)

    LOG.debug(_('finished'))
